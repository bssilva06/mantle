# --- LLM Provider API Keys ---
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql+asyncpg://mantle:mantle@localhost:5432/mantle

# --- Redis (Vault + Rate Limiting) ---
REDIS_URL=redis://localhost:6379/0

# --- Fernet Encryption ---
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=your-fernet-key-here

# --- API Authentication ---
# Secret used for tenant API key hashing
API_KEY_SALT=change-me-to-a-random-string

# --- AWS / LocalStack ---
# Set to http://localhost:4566 for local development with LocalStack
# Leave unset for production AWS
AWS_ENDPOINT_URL=http://localhost:4566
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# --- Langfuse (Observability) ---
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_HOST=http://localhost:3000

# --- Application ---
APP_ENV=development
LOG_LEVEL=DEBUG
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
